#include <stdio.h>
//9.0
//写成二进制形式：1001.0
//(-1)^0 * 1.001 * 2^3
//(-1)^S * M     * 2^E
//S=0, M=1.001, E=3
int main()
{
    int n = 9;
    float *pFloat = (float *)&n;
    printf("n的值为：%d\n", n); //9
    //整数放进去，浮点数的形式取出
    printf("*pFloat的值为：%f\n", *pFloat); //0.000000
    
    *pFloat = 9.0;
    //浮点数放进去，整型的形式取出
    printf("n的值为：%d\n", n); //1091567616
    printf("*pFloat的值为：%f\n", *pFloat);//9.000000
    return 0;
}
