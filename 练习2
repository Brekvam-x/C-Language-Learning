#include <stdio.h>

int main()
{
    char a = -128;
    //10000000 00000000 00000000 10000000 - 原码
    //11111111 11111111 11111111 01111111 - 反码
    //11111111 11111111 11111111 10000000 - 补码
    //10000000
    //整型提升 - 填1
    //11111111 11111111 11111111 10000000 - 补码
    
    printf("%u\n", a); //2^32-2^7
    // %d - 打印十进制的有符号数字
    // %u - 打印十进制的无符号数字
    //11111111 11111111 11111111 10000000 - 原码
    return 0;
}
